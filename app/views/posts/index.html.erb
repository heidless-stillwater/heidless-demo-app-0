
<div class="container">
  <% content_for :title, "Posts" %>
  <h1>Posts</h1>
  
  <%= link_to "New post", new_post_path, class: "btn btn-primary" %>

  <p></p>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "btn btn-secondary" %>
      </p>
    <% end %>
  </div>

</div>